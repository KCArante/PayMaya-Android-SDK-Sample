<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/checkout_fragment_cart_list_item_text_view_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bag"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginRight="32dp"/>

    <TextView
        android:id="@+id/checkout_fragment_cart_list_item_text_view_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3400.00"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginRight="32dp"/>

    <TextView
        android:id="@+id/checkout_fragment_cart_list_item_text_view_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="x 3"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginRight="32dp"/>

    <TextView
        android:id="@+id/checkout_fragment_cart_list_item_text_view_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9800.75"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

</LinearLayout>